<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="VisualChallenge.VisualChallengePage"
             Shell.NavBarIsVisible="false"
             BackgroundColor="White"
             class="h1"
             xmlns:controls="clr-namespace:VisualChallenge"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms">

	<ContentPage.Resources>
		<StyleSheet Source="core.css" />
	</ContentPage.Resources>
	<ListView x:Name="MonkeyList"
	          RowHeight="200"
	          SeparatorVisibility="None">
		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<Grid RowSpacing="5" ColumnSpacing="0">
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						
						<ffimageloading:CachedImage Aspect="AspectFill" 
													Grid.RowSpan="2" 
													HorizontalOptions="FillAndExpand"
													VerticalOptions="FillAndExpand"
													IsOpaque="true"
													CacheDuration="365"
													FadeAnimationForCachedImages="true"
													FadeAnimationEnabled="true"
													DownsampleToViewSize="true"
													Source="{Binding Image}" />
                        
                     <controls:GradientView StartColor="White"  
                                            EndColor="#3e6366"  
                                            Grid.Row="0" 
                                            Grid.RowSpan="2"/> 
                    
						<Label class="h1"
						       Margin="10"
						       Text="{Binding Name}"
						       
						       LineBreakMode="WordWrap"
						       Grid.Row="1"
						       VerticalOptions="End"/> 
					</Grid>
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</ContentPage>
